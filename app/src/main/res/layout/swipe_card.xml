<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:dragEdge="left"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/secondFrame"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:background="@drawable/rectangle_corners"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bInfo"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="TODO"
                android:elevation="0dp"

                app:srcCompat="@android:drawable/ic_menu_info_details" />

            <ImageButton
                android:id="@+id/bCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:foregroundGravity="center"
                app:srcCompat="?attr/actionModeCutDrawable"
                tools:srcCompat="?android:attr/actionModeCutDrawable"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/bCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="?attr/actionModeCopyDrawable"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/bDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@android:drawable/ic_menu_delete"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"/>

        </LinearLayout>

    </FrameLayout>


<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/firstFrame">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        app:cardBackgroundColor="@color/cardview_shadow_start_color"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif-condensed"
                android:text="17"
                android:textSize="28sp"
                android:typeface="sans"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/h"
                android:fontFamily="sans-serif-condensed"
                android:text="35"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/m"
                android:fontFamily="sans-serif-condensed"
                android:text="18"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/m2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/h2"
                android:fontFamily="sans-serif-condensed"
                android:text="55"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/checkBox2"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/h"
                android:focusable="true"
                android:fontFamily="sans-serif-condensed"
                android:text="111111"
                android:textSize="20sp"
                android:typeface="sans" />

            <EditText
                android:id="@+id/editText2"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/h2"
                android:layout_alignBottom="@+id/h2"
                android:layout_toStartOf="@+id/checkBox2"
                android:ems="10"
                android:focusable="false"
                android:inputType="number"
                android:labelFor="@+id/textView"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/h2"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:scaleX="1.5"
                android:scaleY="1.5" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>

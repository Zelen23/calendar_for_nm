<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.daimajia.swipe.SwipeLayout xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FF5534"
            android:gravity="center"
            android:tag="Bottom1"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FF5534"
            android:gravity="center"
            android:tag="Bottom2"
            android:weightSum="10">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/card_sw"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                app:cardBackgroundColor="@color/cardview_shadow_start_color"
                app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/h_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="sans-serif-condensed"
                    android:text="17"
                    android:textSize="28sp"
                    android:typeface="sans"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/m_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/h_sw"
                    android:fontFamily="sans-serif-condensed"
                    android:text="35"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/h2_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/m_sw"
                    android:fontFamily="sans-serif-condensed"
                    android:text="18"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/m2_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/h2_sw"
                    android:fontFamily="sans-serif-condensed"
                    android:text="55"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView12_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/checkBox2"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/h_sw"
                    android:focusable="true"
                    android:fontFamily="sans-serif-condensed"
                    android:text="111111"
                    android:textSize="20sp"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/editText2_sw"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/h2_sw"
                    android:layout_alignBottom="@+id/h2_sw"
                    android:layout_toStartOf="@+id/checkBox2_sw"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="number"
                    android:labelFor="@+id/textView_sw"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/checkBox2_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/h2_sw"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />

            </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>



    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_emp"
    android:layout_width="wrap_content"
    android:layout_height="68dp"
    app:cardBackgroundColor="@color/cardview_shadow_end_color"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="706dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/empty_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/emty_h"
            android:layout_toEndOf="@+id/emty_h"
            android:text="35"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/emty_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="77dp"
            android:text="17"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/empty_m2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/empty_h2"
            android:layout_toEndOf="@+id/empty_h2"
            android:text="55"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/empty_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/empty_m"
            android:layout_marginStart="45dp"
            android:layout_toEndOf="@+id/empty_m"
            android:text="18"
            android:textSize="32sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>


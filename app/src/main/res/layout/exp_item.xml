<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:background="@color/cardview_shadow_end_color"
    >

    <TextView
        android:id="@+id/expItemTime"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/expItemDate"
        android:layout_alignBottom="@+id/expItemDate"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/expItemDate"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/expItemDate"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/expItemInfo"
        android:gravity="end"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/expItemInfo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        app:srcCompat="@drawable/ic_info_outline_black_24dp"
        android:layout_marginEnd="8dp"/>
</RelativeLayout>
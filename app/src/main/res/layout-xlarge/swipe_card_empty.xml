<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layoutFree"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/secondFrameFree"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/rectangle_corners">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bWrite"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="0dp"
                android:scaleX="2"
                android:scaleY="2"
                app:srcCompat="@drawable/ic_create_black_24dp" />



        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/firstFrameFree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_emp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:cardBackgroundColor="@color/cardview_shadow_end_color"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/emty_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"

                    android:gravity="right"
                    android:text="11"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/empty_m"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="300" />

                <TextView
                    android:id="@+id/empty_h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="18"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/empty_m2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="50"

                    android:text="200" />


            </LinearLayout>


        </android.support.v7.widget.CardView>
    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>